{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./*"],
      "@public/*": ["public/*"],
      "@src/*": ["./src/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@containers/*": ["./src/containers/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@modules/*": ["./src/modules/*"]
    },
    "declaration": true,
    "declarationDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["es6", "dom", "es2016", "es2017", "ES2021.String"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    ".husky",
    ".storybook",
    ".vercel",
    "coverage",
    "storybook-static",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx",
    "next-i18next.config.js"
  ]
}
